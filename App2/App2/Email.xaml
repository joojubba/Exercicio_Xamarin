<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Email">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Gerar Email"/>
            <Entry x:Name="etValorN" Placeholder="Nome"/>
            <Entry x:Name="etValorS" Placeholder="Sobrenome"/>
            <Label x:Name="lbEmail" />
            <Button Text="Gerar Email" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>