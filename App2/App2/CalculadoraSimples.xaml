<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.CalculadoraSimples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calculadora Simples" />
            <Label Text="Valor A:" />
            <Entry x:Name="etValorA"  Keyboard="Numeric" Placeholder="Informe um num"/>
            <Label Text="Valor B:" />
            <Entry x:Name="etValorB"  Keyboard="Numeric" Placeholder="Informe um num"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="+" Clicked="Button_Clicked"/>
                <Button Text="-" Clicked="Button_Clicked"/>
                <Button Text="/" Clicked="Button_Clicked"/>
                <Button Text="*" Clicked="Button_Clicked"/>
            </StackLayout>
            <Label x:Name="lbResp" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>