<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determina se o número é par ou impar" />
            <Entry x:Name="etValor"  Keyboard="Numeric" Placeholder="Informe um num"/>
            <Button x:Name="btExecutar" Text="Executar"/>
            <Label x:Name="lbResp" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>